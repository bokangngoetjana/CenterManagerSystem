@using Microsoft.AspNetCore.Identity
@using CenterManagerSystem.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "manager"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link" href="#" data-toggle="dropdown">Manager</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Manager" asp-controller="Category" asp-action="Index">Categories</a>
            <a class="dropdown-item" asp-area="Manager" asp-controller="UsersToCategory" asp-action="Index">Users to Categories</a>
            <a class="dropdown-item" asp-area="Manager" asp-controller="MediaType" asp-action="Index">Media Types</a>
        </div>
    </li>
}
else if(!SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
        <a class="nav-link text-dark" href="#Programmes">Programmes</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" href="#ContactUs">Contact Us</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="#AboutUs">About Us</a>
    </li>
}
