@model IEnumerable<CenterManagerSystem.Entities.Category>
@using CenterManagerSystem.Entities

<!--Hero Section-->
<div class="hero section">
    <img class="img-fluid" src="~/Images/HeroImage.jpeg" />
    <div class="hero-heading">
        <h2 class="hero-heading-text">Welcome to Project Zeal</h2>
        <a id="HeroRegisterButton" class="btn btn-outline-info btn-lg text-light hero-register-button" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
</div>

<hr class="section-divider" />



<!--Programmes section-->
<div id="Programmes" class="courses section">
    <h3 class="section-header">Programmes</h3>

    @{
        var count = Model.Count() / 4;
        var catList = new List<Category>();
    }
    @for (int i = 0; i <= count; i++)
    {
        catList = Model.Skip(i * 4).Take(4).ToList();

        <div class="row mt-3">
            @foreach (Category item in catList)
             {
                <div class="col-md-3">
                    <a href="#" class="text-dark">
                        <div class="card">
                            <img class="img-thumbnail" src="@item.ThumbnailImagePath" alt="@item.Title" />
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
     }

</div>

<hr class="section-divider" />

<!--Contact Us-->

<div id="ContactUs" class="contact-us section">
    <h3 class="col-md-5 section-header"><i class="fas fa-phone-alt mr-2 text-info"></i>Contact Us</h3>
    <div class="col-md-5">
        Send us your thoughts here and we'll get back to you!
    </div>
    <div class="mt-3">
        <div class="col-md-8">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Subject" class="control-label">Subject: </label>
                    <input id="Subject" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="Messagebody" cols="30" rows="10" class="form-control"></textarea>

                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
    </div>
</div>
<hr class="section-divider" />


<!--About Us-->

<div id="AboutUs" class="about-us section">
    <h3 class="col-md-5 section-header"><i class="fas fa-chalkboard-teacher mr-2 text-info"></i>About Us</h3>
    <div class="mt-3 mb-5">
        <div class="col-md-10">
            <p>
                Project Zeal Youth Development Center is an organization, a development center whose focus is on empowering the youth to be the best versions of themselves. We have various programs that benefit the youth’s development
            </p>
        </div>
    </div>
</div>